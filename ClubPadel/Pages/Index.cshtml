@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="stylesheet" type="text/css" href="~/css/index.css">

<div class="text-center">
    <img src="~/image/padel.png" class="logo" />
</div>
<div class="box-padre">
    <div class="text-light text-left box-hijo">
        <h3 class="text-light">Iniciar sesión</h3>
        <form method="post" class="box-datos">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div style="padding:30px;">
                <div class="form-group">
                    <div>
                        <p class="box-datos">Usuario</p>
                        <input name="nombreUsuario" asp-for="Cliente.User" class="form-control box-datos" id="usuario" placeholder="Usuario"/>
                        <span asp-validation-for="Cliente.User" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <p class="box-datos">Contraseña</p>
                        <input type="password" name="contraseñaUsuario" asp-for="Cliente.Password" class="form-control" id="contrasena" placeholder="Contraseña"/>
                        <span asp-validation-for="Cliente.Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group box-datos">
                    <input type="submit" value="Iniciar sesión" asp-for="Cliente.User" class="btn btn-success form-control" />
                </div>
            </div>
        </form>
    </div>
</div>